<div class='container'>
	<div class='row'>
		<div class='well col-md-offset-4 col-md-4'>
<%= form_for(@classroom) do |f| %>
  <% if @classroom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>

      <ul>
      <% @classroom.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
  	<%= f.label :building_id %>
		<%= f.select "building_id", options_for_select(Building.all.order('name').collect{ |b| [b.name, b.id] }) %>
	</div>
  <div class="field">
    <%= f.label :occupancy %><br>
    <%= f.number_field :occupancy %>
  </div>

	<div class="field">
		<table class="Tech">
			<tr>
				<td>
					<%= f.check_box :smartboard %> Smartboard
				</td>
				<td>
					<%= f.check_box :pc %> PC
				</td>
				<td>
					<%= f.check_box :doccam %> Document Camera
				</td>
			</tr>
			<tr>
				<td>
					<%= f.check_box :projector %> Projector
				</td>
				<td>
					<%= f.check_box :extron %> Extron
				</td>
				<td>
					<%= f.check_box :bluray %> Bluray/DVD Player
				</td>
			</tr>
		</table>
	</div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
</div>
</div>

