<p id="notice"><%= notice %></p>
<div class='container'>
				<div class='col-md-4'></div>
								<div class='col-md-4 well'>
								<p>
									<strong>Name:</strong>
									<%= @classroom.name %>
								</p>

								<p>
									<strong>Building:</strong>
									<%= @classroom.building_id %>
								</p>

								<p>
									<strong>Occupancy:</strong>
									<%= @classroom.occupancy %>
								</p>
									<div class="CDB_CLASS_SHOW">
										<% for picture in @classroom.pictures %>
															<a data-toggle="modal" data-target="#myModal">
																	<% if picture.nil? %>
																			No Image
																	<% else %>
																		<%= image_tag picture.image_url(:thumb).to_s  %>
																	<% end %>
															</a>
										<% end %>
									</div>
							 </div>
							 <div class='col-md-4'></div>
			 </div>
</div>

<div id="myModal" class="modal fade" role="dialog">
				<div class="modal-dialog">
								<div class="modal-content">
												<div class="modal-header">
																<button type="button" class="close" data-dismiss="modal">&times;</button>
																<h4 style='text-align: center'> <%= @classroom.name %> </h4>	
												</div>
												<div class="modal-body">	
																	<% if picture.nil? %>
																			No Image
																	<% else %>
																		<%= image_tag picture.image_url(:large).to_s %>
																	<% end %>
												</div>
								</div>
				</div>
</div>

<% if current_user %>
<%= link_to 'Add Picture', new_picture_path(:classroom_id => @classroom) %> |
<%= link_to 'Edit', edit_classroom_path(@classroom) %> |
<% end %>
<%= link_to 'Back', classrooms_path %>
