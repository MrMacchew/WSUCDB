<% if current_user %>
<p id="notice"><%= notice %></p>

<div class="container">
				<% if current_user %>
							<div class='col-md-3'></div>
										<%= link_to new_classroom_path do %>
										<div class='col-md-2 col-sm-5 well CDB_NEW'>New Classroom</div>
									  <% end %>
										<div class='col-md-2'></div>
										<%= link_to new_building_path do %>
										<div class='col-md-2 col-sm-5 well CDB_NEW'>New Buidling</div>
										<% end %>
										<div class='col-md-3'></div>
							</div>
				<% end %>
</div>
<div class='container'>
	<div class='well'>
		<h1 style="text-align:center">Buildings</h1>
	</div>
</div>
<div class="container"> 
				<table class="table">
								<tr class="CDB_BLDG_TH">
												<th>Name</th>
												<th>Code</th>
												<th>Rooms</th>
								</tr>
								<% @buildings.each do |building| %>
												<tr class='CDB_BLDG_ROW'>
																<td>
																				<%= link_to building.name, edit_building_path(building) %>
																</td>
																<td>
																				<%= building.code %>
																</td>
																<td>
																				<% building.classrooms.each do |classroom| %>
																						<p>
																								<%= link_to classroom.name, classroom %>
																						</p>
																				<% end %>
																</td>
												</tr>
								<% end %>
				</table>
</div>

<div class="container">
								<div class="col-xs-4"></div>
								<div class="col-xs-2 well text-center CDB_NEW">
									<%= link_to 'Back', classrooms_path %>
							 </div>
							 <div class="col-xs-4"></div>
</div>
<% else %>
<h1>You are not authorized to see this page</h1>
<% end %>
