<p id="notice"><%= notice %></p>

<div class="container">
				<% if current_user %>
							<div class='col-md-3'></div>
										<%= link_to new_classroom_path do %>
										<div class='col-md-2 col-sm-5 well CDB_NEW'>New Classroom</div>
									  <% end %>
										<div class='col-md-2'></div>
										<%= link_to new_building_path do %>
										<div class='col-md-2 col-sm-5 well CDB_NEW'>New Buidling</div>
										<% end %>
										<div class='col-md-3'></div>
							</div>
				<% end %>
</div>
<h1 style="text-align:center">Listing Buildings</h1>
<div class="container"> 
				<table class="table">
								<tr class="CDB_BLDG_TH">
												<th>Name</th>
												<th>Code</th>
								</tr>
								<% @buildings.each do |building| %>
												<tr>
																<td class='CDB_BLDG_ROW'>
																				<%= building.name %>
																</td>
																<td class='CDB_BLDG_ROW'>
																				<%= building.code %>
																</td>
												</tr>
								<% end %>
				</table>
</div>
